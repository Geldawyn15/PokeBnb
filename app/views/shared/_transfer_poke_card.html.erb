<figure class="card card--<%= @pokemon.poke_type.downcase %>">
  <div class="card__image-container">
    <img src="<%= @pokemon.anime_url %>" alt="Pikachu" class="card__image">
  </div>

  <figcaption class="card__caption">
    <h1 class="card__name"><%= @pokemon.name.capitalize %></h1>

    <h3 class="card__type">
      <%= @pokemon.poke_type %>
    </h3>

    <table class="card__stats">
      <tbody>
          <th>Level</th>
          <td><%= @pokemon.level %></td>
        </tr>
        <tr>
          <tr>
          <th>Date</th>
          <td></td>
        </tr>
        <tr>
          <th>Enemy name</th>
          <td><%= @transfers.enemy_name%></td>
        </tr>
        <tr>
          <th>Enemy Type</th>
          <td><%= @transfers.enemy_type%></td>
        </tr>
        <tr>
          <th>Enemy Level</th>
          <td><%= @transfers.enemy_level%></td>
        </tr>
        <tr>
      </tbody>
    </table>
</figure>

