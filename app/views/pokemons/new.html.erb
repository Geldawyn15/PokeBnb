<div class="form-banner form-banner-pokemon">
  <div class="container">
    <div class="row">
      <div class="form-text-container col-sm-12 col-md-6">
        <h1 class="text-danger">Create your Pokemon</h1>
        <p class="text-dark">Add your Pokemon and transfer them to trainers so that they can battle and win level!</p>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="form-inputs">
          <%= simple_form_for ([@user, @pokemon]) do |f|%>
              <%= f.input :name, label:"Enter your Pokemon's name" %>
              <%= f.input :level, label:"What's it's level?" %>
              <%= f.submit "Go!", class: "button2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
