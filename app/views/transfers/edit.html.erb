<div class="form-banner form-banner-transfer">
  <div class="container">
    <div class="row form2">
      <div class="form-text-container col-sm-12 col-md-6">
        <h1 class="text-danger">How did the transfer go?</h1>
        <p class="text-white">So the transfer is now over. How was the battle? Let us now about it and leave a review for <%= @pokemon.name.downcase.capitalize%>.</p>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="form-inputs">
          <%= simple_form_for ([@transfer]) do |f|%>
              <%= f.label :enemy_name, "Who was the opponent?", class:"text-white" %>
              <%= f.input :enemy_name, label: false %>
              <%= f.label :enemy_level, "What was its level?", class:"text-white" %>
              <%= f.input :enemy_level, label: false %>
              <%= f.label :outcome, "Did you win?", class:"text-white" %>
              <%= f.input :outcome, label: false %>
              <%= f.label :rating, "What rating will you give to your Pokemon", class:"text-white" %>
              <%= f.input :rating, collection: 0..5, label: false %>
              <%= f.label :comment, "Leave a comment", class:"text-white" %>
              <%= f.input :comment, as: :text, label: false %>
              <%= f.submit "Oh yeah", class: "btn button2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
